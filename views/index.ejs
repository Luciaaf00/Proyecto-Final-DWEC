<body>
  
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <!--Icono-->
        <div class="navbar-brand">
          <i class="bi bi-valentine"></i>
          <span class="text-warning">PinPanPunShop</span>
        </div>
        <!--boton del menú-->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Elementos del menú colapsable -->
        <div class="collapse navbar-collapse" id="menu">
          <ul class="navbar-nav me-auto p-3">
             <li class="navbar-item"><a class="nav-link active" href="#">Inicio</a></li>
             <li class="navbar-item"><a class="nav-link" href="#">Manga</a></li>
             <li class="navbar-item"><a class="nav-link" href="#">Figuras</a></li>
             <li class="navbar-item"><a class="nav-link" href="#">Juegos</a></li> 
          </ul>
          <hr class="text-white-50">

          <div class="col-lg-3 d-flex flex-row justify-content-center alig-items-center" id="login">
            <button type="button" class="btn btn-danger m-2">Accede</button>
            <button type="button" class="btn btn-danger m-2">Registrate</button>
          </div>
          <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 p-3">
            <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
          </form>
        </div>
      </div>
